<div class="row">
    <div class="col-sm-6 col-md-4 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessages}}d-none{{/if}}">
            {{successMsg}}
        </div>
    </div>
</div>
{{# each products}}
<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}" class="img-responsive" alt=".">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p>
                    <a href="#" class="btn btn-primary" role="button">Buy Now</a>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-default" role="button">Add to cart</a>
                </p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}